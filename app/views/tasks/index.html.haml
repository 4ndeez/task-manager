.container
  %table.table.mt-2
    %thead.thead-dark
      %tr
        %th Title
        %th Description
        %th Status
        %th User
        %th
        %th
        %th
    %tbody
      - @tasks.each do |task|
        %tr
          %td= task.title
          %td= task.description
          %td= task.status
          %td= "#{task.user.first_name} #{task.user.last_name}"
          %td= link_to 'Show', task, class: 'btn btn-primary btn-block'
          %td= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning btn-block'
          %td= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block'

  = link_to 'New Task', new_task_path, class: 'btn btn-success'
